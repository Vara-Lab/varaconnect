{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "types": ["vite/client", "node"],
    "skipLibCheck": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
